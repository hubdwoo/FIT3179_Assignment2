{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "background": "white",
    "data": 
    {
        "url": "https://github.com/hubdwoo/FIT3179_Week9/blob/main/Datasets/states_data.csv"
    },
    "mark":{
        "type": "point",
        "filled": true
    },
    "encoding": 
    {
        "x":
        {
            "field": "positive",
            "type": "quantitative",
            "axis":
            {
                "grid": false
            }
        },
        "y":
        {
            "field": "POPESTIMATE2020",
            "type": "quantitative",
            "axis": 
            {
                "grid": false
            }
        },
        "shape":
        {
            "field": "City",
            "type": "nominal"
        },
        "color": 
        {
            "field": "City",
            "type": "nominal"
        },
        "tooltip": [{
            "field": "City",
            "type": "nominal",
            "title": "State"
        },{
            "field": "positive",
            "type": "quantitative",
            "title": "Positive tests",
            "format": ","
        }]
    },
    "config": {
        "legend": {
            "disable": true
        },
        "view": {
            "stroke": "transparent"
        }
    }
}